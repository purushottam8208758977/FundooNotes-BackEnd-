{
    "swagger": "2.0",
    "info": {
        "version": "1.0.0",
        "title": "Fundoo Notes Swagger",
        "description": "This is a fundoo notes swagger to access rest API server ",
        "license": {
            "name": "MIT",
            "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
        }
    },
    "host": "localhost:4000",
    "basePath": "/",
    "tags": [
        {
            "name": "Users",
            "description": "API for users in the system"
        }
    ],
    "schemes": [
        "http"
    ],
    "securityDefinitions": {
        "Token": {
            "type": "apiKey",
            "name": "Authorization",
            "in": "header"
        }
    },
    "consumes": [
        "application/json"
    ],
    "produces": [
        "application/json"
    ],
    "paths": {
        "/registration": {
            "post": {
                "tags": [
                    "Users"
                ],
                "description": "Create new user in system",
                "parameters": [
                    {
                        "name": "user",
                        "in": "body",
                        "description": "User that we want to create",
                        "schema": {
                            "$ref": "#/definitions/User"
                        }
                    }
                ],
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "description": "New user is created",
                        "schema": {
                            "$ref": "#/definitions/User"
                        }
                    }
                }
            }
        },
        "/login": {
            "post": {
                "tags": [
                    "Users"
                ],
                "description": "Find user in system",
                "parameters": [
                    {
                        "name": "user",
                        "in": "body",
                        "description": "Get the user",
                        "schema": {
                            "$ref": "#/definitions/User"
                        }
                    }
                ],
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "description": "New user created",
                        "schema": {
                            "$ref": "#/definitions/User"
                        }
                    }
                }
            }
        },
        "/forgetPassword": {
            "post": {
                "tags": [
                    "Users"
                ],
                "description": "Find user email in system to forgot password",
                "parameters": [
                    {
                        "name": "user",
                        "in": "body",
                        "description": "Get the user email",
                        "schema": {
                            "$ref": "#/definitions/User"
                        }
                    }
                ],
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "description": "Getting a user email id",
                        "schema": {
                            "$ref": "#/definitions/User"
                        }
                    }
                }
            }
        },
        "/resetPassword": {
            "post": {
                "tags": [
                    "Users"
                ],
                "description": "To update password of user",
                "parameters": [
                    {
                        "name": "user",
                        "in": "body",
                        "description": "Update password of given email id",
                        "schema": {
                            "$ref": "#/definitions/User"
                        }
                    }
                ],
                "produces": [
                    "application/json"
                ],
                "security": {
                    "Token": []
                },
                "responses": {
                    "200": {},
                    "responses": {
                        "200": {
                            "description": "New password updated",
                            "schema": {
                                "$ref": "#/definitions/User"
                            }
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "User": {
            "properties": {
                "firstName": {
                    "type": "string"
                },
                "lastName": {
                    "type": "string"
                },
                "email": {
                    "type": "string"
                },
                "password": {
                    "type": "string"
                }
            }
        }
    },
    "User": {
        "type": "object",
        "$ref": "#/definitions/User"
    }
}